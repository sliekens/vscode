{
  "name": "xml-language-features",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "1.0.0",
  "publisher": "vscode",
  "license": "MIT",
  "aiKey": "0c6ae279ed8443289764825290e4f9e2-1a736e7c-1324-4338-be46-fc2a58ae4d14-7255",
  "engines": {
    "vscode": "^1.77.0"
  },
  "icon": "icons/xml.png",
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:xsl"
  ],
  "enabledApiProposals": [
    "extensionsAny"
  ],
  "main": "./client/out/node/xmlClientMain",
  "browser": "./client/dist/browser/xmlClientMain",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "scripts": {
    "compile": "npx gulp compile-extension:xml-language-features-client compile-extension:xml-language-features-server",
    "watch": "npx gulp watch-extension:xml-language-features-client watch-extension:xml-language-features-server",
    "install-client-next": "npm install vscode-languageclient@next"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "configuration": {
      "id": "xml",
      "order": 20,
      "type": "object",
      "title": "XML",
      "properties": {
        "xml.format.enable": {
          "type": "boolean",
          "scope": "window",
          "default": true,
          "description": "%xml.format.enable.desc%"
        },
        "xml.format.wrapLineLength": {
          "type": "integer",
          "scope": "resource",
          "default": 120,
          "description": "%xml.format.wrapLineLength.desc%"
        },
        "xml.format.preserveNewLines": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "%xml.format.preserveNewLines.desc%"
        },
        "xml.format.maxPreserveNewLines": {
          "type": [
            "number",
            "null"
          ],
          "scope": "resource",
          "default": null,
          "markdownDescription": "%xml.format.maxPreserveNewLines.desc%"
        },
        "xml.format.indentInnerXml": {
          "type": "boolean",
          "scope": "resource",
          "default": false,
          "markdownDescription": "%xml.format.indentInnerXml.desc%"
        },
        "xml.format.wrapAttributes": {
          "type": "string",
          "scope": "resource",
          "default": "auto",
          "enum": [
            "auto",
            "force",
            "force-aligned",
            "force-expand-multiline",
            "aligned-multiple",
            "preserve",
            "preserve-aligned"
          ],
          "enumDescriptions": [
            "%xml.format.wrapAttributes.auto%",
            "%xml.format.wrapAttributes.force%",
            "%xml.format.wrapAttributes.forcealign%",
            "%xml.format.wrapAttributes.forcemultiline%",
            "%xml.format.wrapAttributes.alignedmultiple%",
            "%xml.format.wrapAttributes.preserve%",
            "%xml.format.wrapAttributes.preservealigned%"
          ],
          "description": "%xml.format.wrapAttributes.desc%"
        },
        "xml.format.wrapAttributesIndentSize": {
          "type": [
            "number",
            "null"
          ],
          "scope": "resource",
          "default": null,
          "markdownDescription": "%xml.format.wrapAttributesIndentSize.desc%"
        },
        "xml.format.unformattedContentDelimiter": {
          "type": "string",
          "scope": "resource",
          "default": "",
          "markdownDescription": "%xml.format.unformattedContentDelimiter.desc%"
        },
        "xml.suggest.enabled": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "%xml.suggest.enabled.desc%"
        },
        "xml.validate.enabled": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "%xml.validate.enabled%"
        },
        "xml.autoClosingTags": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "%xml.autoClosingTags%"
        },
        "xml.hover.documentation": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "%xml.hover.documentation%"
        },
        "xml.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "%xml.trace.server.desc%"
        }
      }
    },
    "configurationDefaults": {
      "[xml]": {
        "editor.suggest.insertMode": "replace"
      },
      "[xsl]": {
        "editor.suggest.insertMode": "replace"
      }
    }
  },
  "dependencies": {
    "@vscode/extension-telemetry": "^0.9.8",
    "vscode-languageclient": "^10.0.0-next.16",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "22.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode.git"
  }
}